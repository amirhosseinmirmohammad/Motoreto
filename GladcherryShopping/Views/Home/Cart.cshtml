@model List<DataLayer.ViewModels.BasketViewModel>
@{ GladcherryShopping.Models.ApplicationDbContext content = new GladcherryShopping.Models.ApplicationDbContext();}
@{
    ViewBag.Title = "سبد خرید";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Data.Entity;

@section Metas{
    <meta name="description" content="فروشگاه اینترنتی موتورتو فعال در زمینه فروش انواع قطعات مصرفی خودرو شامل فیلتر روغن ، فیلتر هوا ، فیلتر بنزین ، فیلتر کابین ، روغن موتور و روانکار و غیره است .">
    <meta name="Keywords" content="قطعات مصرفی خودرو">
    <meta property="og:title" content="موتورتو ، فروش آنلاین قطعات خودرو | Motorbaz" />
    <meta property="og:url" content="http://www.motoreto.ir/" />
    <meta property="og:image" content="http://www.motoreto.ir/images/sadr_logo.png" />
    <meta name="twitter:image" content="موتورتو ، فروش آنلاین قطعات خودرو | Motorbaz">
    <meta name="robots" content="noindex">
}

@section Styles{
    <style>
        .maincontent-area, .latest-product {
            padding-bottom: 0px !important;
        }

        select {
            width: 78% !important;
        }
    </style>
}

<div class="container blog_header">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center">
                <h1>سبد خرید</h1>
            </div>
        </div>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <br />
    <br />
    <div class="container text-center" style="direction:rtl !important;">
        <div class="wrapper wrapper-content animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <div class="ibox-content">
                                <div class="alert alert-danger">
                                    @TempData["Error"]
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (TempData["Success"] != null)
{
    <br />
    <br />
    <div class="container text-center" style="direction:rtl !important;">
        <div class="wrapper wrapper-content animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <div class="ibox-content">
                                <div class="alert alert-success">
                                    @TempData["Success"]
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-xs-12">
            </div>

            <div class="col-md-12 col-xs-12">
                <div class="product-content-right">
                    <div class="woocommerce">
                        @if (Model.Count > 0)
                        {
                            <table cellspacing="0" class="shop_table cart table-responsive table-hover">
                                <thead>
                                    <tr>
                                        <th class="product-remove">&nbsp;</th>
                                        <th class="product-thumbnail">عکس</th>
                                        <th class="product-name">محصول</th>
                                        <th class="product-price">قیمت هر واحد به ریال</th>
                                        <th class="product-quantity">تعداد</th>
                                        <th class="product-subtotal">مجموع به ریال</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="RMNT_item">
                                            <td class="product-remove">
                                                <a title="حذف محصول از سبد خرید" class="remove btnRemove" productid="@item.Product.Id"><i class="fa fa-close"></i></a>
                                            </td>
                                            <td class="product-thumbnail">
                                                @if (item.Product.SiteFirstImage != null)
                                                {
                                                    <a href="/Product/Details/@item.Product.Id"><img width="145" height="145" alt="@item.Product.PersianName" title="@item.Product.PersianName" class="shop_thumbnail" src="@item.Product.SiteFirstImage"></a>
                                                }
                                                else
                                                {
                                                    <a href="/Product/Details/@item.Product.Id"><img width="145" height="145" alt="@item.Product.PersianName" title="@item.Product.PersianName" class="shop_thumbnail" src="~/images/hand-shake.png"></a>
                                                }
                                            </td>
                                            <td class="product-name">
                                                <a href="/Product/Details/@item.Product.Id">@item.Product.PersianName</a>
                                            </td>
                                            <td class="product-price">
                                                <span class="amount prPrice">@Convert.ToInt32(@item.Product.UnitPrice - (item.Product.UnitPrice) * (item.Product.DiscountPercent) / 100) </span>
                                            </td>
                                            @{
                                                int pricewithdiscount;
                                                if (item.Product.DiscountPercent > 0)
                                                {
                                                    pricewithdiscount = item.Product.UnitPrice - (item.Product.UnitPrice) * (item.Product.DiscountPercent) / 100;
                                                }
                                                else
                                                {
                                                    pricewithdiscount = item.Product.UnitPrice;
                                                }
                                            }
                                            <td class="product-quantity padding-top">
                                                <div class="quantity buttons_added">
                                                    <input type="button" productid="@item.Product.Id" productPrice="@pricewithdiscount" count="@item.Count" class="minus" value="-" onclick="minus(this)">
                                                    <input type="number" disabled size="4" class="input-text qty text qtc" productPrice="@pricewithdiscount" count="@item.Count" productid="@item.Product.Id" title="Qty" value="@item.Count" min="@item.Product.Min" step="1">
                                                    <input type="button" productid="@item.Product.Id" productPrice="@pricewithdiscount" count="@item.Count" class="plus" value="+" onclick="plus(this)">
                                                    <br /><img style="display:none" id="loader" src="~/images/loader.gif" />
                                                </div>
                                            </td>
                                            @{
                                                var resultcount = item.Count * Convert.ToInt32(item.Product.UnitPrice - (item.Product.UnitPrice) * (item.Product.DiscountPercent) / 100);
                                            }
                                            <td class="product-subtotal">
                                                <span class="amount">@resultcount</span>
                                            </td>
                                        </tr>
                                                }
                                </tbody>
                            </table>
                                                }
                                                else
                                                {
                                                    <p class="bascketheader">سبد خرید شما خالی است شما میتوانید از دسته بندی های زیر محصولات را دقیق تر بررسی نمایید :</p>
                                                    if (content.Categories.Count() > 0)
                                                    {
                                                        <div class="row bascketcat">
                                                            @foreach (var item in content.Categories.Include(current => current.Products).Where(current => current.Products.Count() > 0).ToList())
                                                            {
                                                                <div class="col-md-4">
                                                                    <a class="btn btn-info" title="@item.PersianName" href="/product/all/@item.Id">@item.PersianName</a><br />
                                                                </div>
                                                            }
                                                        </div>
                                                    }
                                                }
                        <div class="cart-collaterals">
                            <div class="cross-sells">
                            </div>
                            @if (Model.Count > 0)
                            {
                                <div class="RMNT_totals ">
                                    <table cellspacing="0">
                                        <tbody></tbody>
                                    </table>
                                </div>
                                <form method="get" action="/Home/InsertOrder" class="shipping_calculator" id="SubmitOrder">
                                    <h2><a class="shipping-calculator-button" aria-expanded="false" aria-controls="calcalute-shipping-wrap"> روش های پرداخت <i class="fa fa-arrow-down"></i></a></h2>
                                    <section id="calcalute-shipping-wrap" class="shipping-calculator-form">
                                        <p class="form-row form-row-wide">
                                            <select rel="calc_shipping_state" class="country_to_state" id="calc_shipping_country" name="PaymentType" required>
                                                <option selected value="0">لطفا نوع پرداخت را تعیین نمایید</option>
                                                <option value="1">پرداخت درب منزل فقط شهر تهران (هزینه حمل)</option>
                                                <option disabled value="2">پرداخت آنلاین (هزینه حمل +‌ هزینه سفارش)</option>
                                            </select>
                                        </p>
                                        <h2><a class="shipping-calculator-button" aria-expanded="false" aria-controls="calcalute-shipping-wrap"> روش های ارسال <i class="fa fa-arrow-down"></i></a></h2>
                                        <p class="form-row form-row-wide">
                                            <select rel="calc_shipping_state" name="Type" required>
                                                <option selected value="0">لطفا روش ارسال را تعیین نمایید</option>
                                                <option value="1">ارسال عادی (رایگان تا 72 ساعت)</option>
                                                <option value="2">ارسال ویژه (سریع شامل هزینه)</option>
                                            </select>
                                        </p>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <p><button class="button" value="1" type="submit"> تکمیل سفارش &nbsp;<i class="fa fa-arrow-left"></i></button></p>
                                        }
                                        else
                                        {
                                            <p>
                                                لطفا جهت تکمیل سفارش ابتدا به حساب کاربری خود ورود کرده یا ثبت نام نمایید .
                                                <a class="button" href="/account/loginaccount"> حساب کاربری &nbsp;<i class="fa fa-arrow-left"></i></a>
                                            </p>
                                        }
                                    </section>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="maincontent-area wow slideInRight" id="specialproducts">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h3 class="section-title">محصولات پرفروش</h3>
                    <div class="product-carousel">
                        @foreach (var item in content.Products.Include(current => current.Orders).OrderByDescending(current => current.Orders.Count()).ToList())
                        {
                            <div class="single-product">
                                <div class="product-f-image">
                                    <img src="@item.SiteFirstImage" alt="@item.PersianName" title="@item.PersianName">
                                </div>

                                <h2><a href="/Product/Details/@item.Id">@item.PersianName</a></h2>

                                <div class="product-carousel-price">
                                    @if (item.DiscountPercent > 0)
                                    {
                                        int pricewithdiscount = item.UnitPrice - (item.UnitPrice) * (item.DiscountPercent) / 100;

                                        <ins>@string.Format("{0:n0}", pricewithdiscount) ریال</ins>
                                        <del>@string.Format("{0:n0}", item.UnitPrice)</del>

                                    }
                                    else
                                    {
                                        <ins>@string.Format("{0:n0}", item.UnitPrice) ریال</ins>
                                        @*<del>مقطوع</del>*@
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Error"] != null)
{
        <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog" style="margin-top:80px">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">وضعیت سفارش</h4>
                </div>
                <div class="modal-body" style="text-align:center;direction:rtl;">
                    <p class="text-danger">@TempData["Error"]</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">ویرایش اطلاعات</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#myModal").modal();
        });
    </script>

    <script>
        function plus(element) {
            var input = element.previousElementSibling;
            input.value = parseInt(input.value) + parseInt(1);
            input.defaultValue = input.value;
            $(element).siblings("img").show();
            var id = $(element).attr("productid");
            var price = $(element).attr("productPrice");
            var count = $(element).attr("count");
            var newamount = parseInt(price) * count + parseInt(price);
            var subTottal = $(element).closest("td").next("td").find("span");
            var htmamount = subTottal.html();
            var res = parseInt(htmamount) + parseInt(price);
            subTottal.html(res);
            var shoppingcart = $("#shoppingPrice").html();
            $("#shoppingPrice").html(parseInt(shoppingcart) + parseInt(price) + " ریال ")
            $("#preOrder").html(parseInt(shoppingcart) + parseInt(price) + " ریال ");

            //Increase Region
            $.ajax({
                url: "/Home/AddToShoppingCart",
                data: { Id: id },
                type: "Post",
                dataType: "Json",
                success: function (result) {
                    if (result.Success) {
                        $(element).siblings("img").delay(700).fadeOut(300);
                    }
                    eval(result.Script);
                },
                error: function () {
                    alert("خطایی رخ داده است !");
                }
            });
            //Increase Region
        }
        function minus(element) {
            var input = element.nextElementSibling;
            if (input.value > 1) {
                //input.value = parseInt(input.value) - parseInt(1);
                //input.defaultValue = input.value;
                $(element).siblings("img").show();
                var id = $(element).attr("productid");
                var price = $(element).attr("productPrice");
                var count = $(element).attr("count");
                var newamount = parseInt(price) * count + parseInt(price);
                var subTottal = $(element).closest("td").next("td").find("span");
                var htmamount = subTottal.html();
                if (htmamount != price) {
                    var res = parseInt(htmamount) - parseInt(price);
                    //subTottal.html(res)
                    var shoppingcart = $("#shoppingPrice").html();
                    $("#shoppingPrice").html(parseInt(shoppingcart) - parseInt(price) + " ریال ")
                    $("#preOrder").html(parseInt(shoppingcart) - parseInt(price) + " ریال ");

                    //Decrease Region
                    $.ajax({
                        url: "/Home/MinusFromShoppingCart",
                        data: { Id: id },
                        type: "Post",
                        dataType: "Json",
                        success: function (result) {
                            $(element).siblings("img").delay(700).fadeOut(300);
                            if (result.Success) {
                                input.value = parseInt(input.value) - parseInt(1);
                                input.defaultValue = input.value;
                                subTottal.html(res)
                            }
                            eval(result.Script);
                        },
                        error: function () {
                            alert("خطایی رخ داده است !");
                        }
                    });
                    //Decrease Region
                }
            }
        }
    </script>

    <script>
        function Discount() {
            var discount = jQuery("#coupon_code").val();
            var totalPrice = 0;
            var priceDis = 0;
            var uId = jQuery("#uId").text();
            if (discount != undefined || discount != null || discount != "") {
                $.ajax({
                    url: "/Home/GetDiscount",
                    contentType: "application/json; charset=utf-8",
                    data: { Code: discount, UserId: uId },
                    dataType: "json",
                    type: "GET",
                    success: function (data) {
                        if (data.Status == true) {
                            $("#shoppingPrice").html(data.PriceHtml + " ریال با تخفیف ");
                            $("#preOrder").html(data.PriceHtml + " ریال با تخفیف ");
                        }
                        { $('#error-modal .inner-text').html(data.Text); $('#error-modal').modal(); return false; }
                    },
                    error: function (jqhxr, statusText, error) { alert("خطایی رخ داده است لطفا دویاره امتحان کنید ."); }
                });
            }
            else {
                { $('#error-modal .inner-text').html("لطفا کد خود را وارد نمایید ."); $('#error-modal').modal(); return false; }
            }
        }
    </script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $('.shipping-calculator-button').click(function () {
            if ($(".shipping-calculator-button i").hasClass('fa-arrow-down')) {
                $('.shipping-calculator-button i').switchClass("fa-arrow-down", "fa-arrow-up");
            }
            else {
                $('.shipping-calculator-button i').switchClass("fa-arrow-up", "fa-arrow-down");
            }
        });
    </script>

    <script>
        $(".btnRemove").click(function (e) {
            e.preventDefault();
            var id = $(this).attr("productid");
            var element = $(this);
            var txt;
            var r = confirm("آیا از حذف این محصول از سبد خرید خود مطمئن هستید ؟");
            if (r == true) {
                $.ajax({
                    url: "/Home/RemoveCart",
                    data: { Id: id },
                    type: "Post",
                    dataType: "Json",
                    success: function (result) {
                        if (result.Success) {
                            setTimeout(function () {
                                element.parent().parent().fadeOut('fast').remove();
                                var el = $(".RMNT_item");
                                var con = $(".RMNT_item").length;
                                if (con == 0) {
                                    $(".shop_table").fadeOut('fast').remove();
                                    var x = $(".checkout-button");
                                    $(".checkout-button").fadeOut('fast').remove();
                                    $(".shipping_calculator").fadeOut('fast').remove();
                                    $(".actions").fadeOut('fast').remove();
                                    $(".RMNT_totals").fadeOut('fast').remove();
                                    $(".woocommerce:first-child").after("<br /><br /><br /> <p style='font-size:20px'>سبد خرید شما خالی شد .</p> <br />");
                                }
                            }, 800);
                            $("#shoppingCount").html(result.CountHtml);
                            $("#shoppingPrice").html(result.PriceHtml + " ریال ");
                            $("#preOrder").html(result.PriceHtml + " ریال ");
                        }
                        eval(result.Script);
                    },
                    error: function () {
                        alert("Error!");
                    }
                });
            }
        });
    </script>

}
